<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nthnleo.parceldeliverysystem.SendParcel"
    android:background="#FF55FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Friends"
        android:id="@+id/textView5"
        android:textSize="55dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/friendList"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sendparcelUsername"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Delivery / Accept"
        android:id="@+id/directdeliveryButton"
        android:width="200dp"
        android:onClick="onDirectDeliveryClicked"
        android:layout_below="@+id/sendparcelZipcode"
        android:layout_alignLeft="@+id/sendparcelZipcode"
        android:layout_alignStart="@+id/sendparcelZipcode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indirect Delivery / Decline"
        android:id="@+id/indirectdeliveryButton"
        android:width="200dp"
        android:layout_below="@+id/directdeliveryButton"
        android:layout_centerHorizontal="true"
        android:onClick="onindirectdeliveryButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/sendparcelZipcode"
        android:width="200dp"
        android:layout_below="@+id/sendparcelUsername"
        android:layout_alignLeft="@+id/sendparcelUsername"
        android:layout_alignStart="@+id/sendparcelUsername"
        android:hint="Zipcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ParcelList"
        android:textSize="15dp"
        android:layout_alignTop="@+id/friendList"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#0055FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Friend List"
        android:id="@+id/textView7"
        android:layout_below="@+id/indirectdeliveryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Parcel Requests"
        android:id="@+id/textView8"
        android:layout_below="@+id/indirectdeliveryButton"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#FFFFFF" />

</RelativeLayout>
